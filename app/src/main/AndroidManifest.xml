<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andromap33.mcms">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name=".LoginScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.HOME_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ResidentsList"
            android:label="@string/residents_list" >
            <intent-filter>
                <action android:name="android.intent.action.ResidentsList_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ViewOrders"
            android:label="@string/view_orders" >
            <intent-filter>
                <action android:name="android.intent.action.ViewOrders_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".AddTodayMenu"
            android:label="@string/today_menu" >
            <intent-filter>
                <action android:name="android.intent.action.AddTodayMenu_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddNewResident"
            android:label="Add New Resident" >
            <intent-filter>
                <action android:name="android.intent.action.AddNewResident_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ResidentDetailedActivity"
            android:label="Resident details" >
            <intent-filter>
                <action android:name="android.intent.action.ResidentDetailedActivity_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddNewEntry"
            android:label="Add New Entry" >
            <intent-filter>
                <action android:name="android.intent.action.AddNewEntry_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Introduction"/>

    </application>

</manifest>