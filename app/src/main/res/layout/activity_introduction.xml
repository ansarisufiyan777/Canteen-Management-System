<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    tools:context="com.andromap33.mcms.Introduction"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:textColor="#1535a9"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/intro_head"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#bc00fa"
        android:id="@+id/intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/intro_text" />

    <RelativeLayout
        android:layout_below="@id/intro_text"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:onClick="skipToMain"
            android:background="#d11414"
            android:textColor="#FFFFFF"
            android:text="@string/skip_button"
            android:layout_margin="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="showNextIntro"
            android:background="#d11414"
            android:textColor="#FFFFFF"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:text="@string/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>

</ScrollView>